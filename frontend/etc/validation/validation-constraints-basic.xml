<?xml version="1.0" encoding="UTF-8"?>
<constraint-mappings xmlns="http://xmlns.jcp.org/xml/ns/validation/mapping"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/validation/mapping http://xmlns.jcp.org/xml/ns/validation/mapping/validation-mapping-2.0.xsd"
                     version="2.0">
    <bean class="com.agnitas.emm.core.mailinglist.bean.MailinglistModel">
        <field name="companyId">
            <constraint annotation="jakarta.validation.constraints.Positive">
                <message>err.isPositive{company.id}</message>
                <groups>
                    <value>com.agnitas.emm.core.mailinglist.bean.MailinglistModel$AddGroup</value>
                    <value>com.agnitas.emm.core.mailinglist.bean.MailinglistModel$UpdateGroup</value>
                    <value>com.agnitas.emm.core.mailinglist.bean.MailinglistModel$GetGroup</value>
                    <value>com.agnitas.emm.core.mailinglist.bean.MailinglistModel$CompanyGroup</value>
                </groups>
            </constraint>
        </field>
        <field name="shortname">
            <constraint annotation="jakarta.validation.constraints.NotBlank">
                <message>err.required{shortname}</message>
                <groups>
                    <value>com.agnitas.emm.core.mailinglist.bean.MailinglistModel$AddGroup</value>
                    <value>com.agnitas.emm.core.mailinglist.bean.MailinglistModel$UpdateGroup</value>
                </groups>
            </constraint>
        </field>
        <field name="mailinglistId">
            <constraint annotation="jakarta.validation.constraints.Positive">
                <message>err.isPositive{mailinglist.id}</message>
                <groups>
                    <value>com.agnitas.emm.core.mailinglist.bean.MailinglistModel$UpdateGroup</value>
                    <value>com.agnitas.emm.core.mailinglist.bean.MailinglistModel$GetGroup</value>
                </groups>
            </constraint>
        </field>
    </bean>
    
    <bean class="com.agnitas.emm.core.recipient.service.RecipientModel">
        <field name="companyId">
            <constraint annotation="jakarta.validation.constraints.Positive">
                <message>err.isPositive{company.id}</message>
                <groups>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$AddGroup</value>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$UpdateGroup</value>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$DeleteGroup</value>
                </groups>
            </constraint>
        </field>
        <field name="customerId">
            <constraint annotation="jakarta.validation.constraints.Positive">
                <message>err.isPositive{customer.id}</message>
                <groups>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$UpdateGroup</value>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$DeleteGroup</value>
                </groups>
            </constraint>
        </field>
        <getter name="gender">
            <constraint annotation="jakarta.validation.constraints.NotNull">
                <message>err.required{gender}</message>
                <groups>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$AddGroup</value>
                </groups>
            </constraint>
            <constraint annotation="jakarta.validation.constraints.Min">
                <message>err.intRange{gender}{0}{5}</message>
                <groups>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$AddGroup</value>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$UpdateGroup</value>
                </groups>
                <element name="value">0</element>
            </constraint>
            <constraint annotation="jakarta.validation.constraints.Max">
                <message>err.intRange{gender}{0}{5}</message>
                <groups>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$AddGroup</value>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$UpdateGroup</value>
                </groups>
                <element name="value">5</element>
            </constraint>
        </getter>
        <getter name="email">
            <constraint annotation="jakarta.validation.constraints.NotBlank">
                <message>err.required{email}</message>
                <groups>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$AddGroup</value>
                </groups>
            </constraint>
            <constraint annotation="jakarta.validation.constraints.Email">
                <message>err.isEmail{email}</message>
                <groups>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$AddGroup</value>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$UpdateGroup</value>
                </groups>
            </constraint>
        </getter>
        <getter name="mailtype">
            <constraint annotation="jakarta.validation.constraints.NotNull">
                <message>err.required{mailtype}</message>
                <groups>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$AddGroup</value>
                </groups>
            </constraint>
            <constraint annotation="jakarta.validation.constraints.Min">
                <message>err.intRange{mailtype}{0}{2}</message>
                <groups>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$AddGroup</value>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$UpdateGroup</value>
                </groups>
                <element name="value">0</element>
            </constraint>
            <constraint annotation="jakarta.validation.constraints.Max">
                <message>err.intRange{mailtype}{0}{2}</message>
                <groups>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$AddGroup</value>
                    <value>com.agnitas.emm.core.recipient.service.RecipientModel$UpdateGroup</value>
                </groups>
                <element name="value">2</element>
            </constraint>
        </getter>
    </bean>
</constraint-mappings>
